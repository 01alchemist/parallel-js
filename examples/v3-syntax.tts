//Turbo object
@turbo
export class Vector{
    x: float64;
    y: float64;
    z: float64;

    /**
     *
     * @param SELF is memory pointer to vector object
     * @param x
     * @param y
     * @param z
     */
    static init(SELF, x: float64 = 0, y: float64 = 0, z: float64 = 0) {
        SELF.x = x;
        SELF.y = y;
        SELF.z = z;
    }

    static add(SELF, v2: Vector) {
        return new Vector(SELF.x + v2.x, SELF.y + v2.y, SELF.z + v2.z);
    }

}


